@model IEnumerable<Product>
<h1>Products</h1>
<a class="btn btn-primary mt-4 mb-4" asp-action="Add">Add New Product</a>
<table class="table table-striped">
    <thead class="bg-primary text-white">
        <tr>

            <th>Product Name</th>
            <th>Price</th>
            
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in Model)
        {
            <tr>

                <td>@prod.ProductName</td>
                <td>@prod.Price</td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@prod.Id" class="btn btn-primary">Edit</a>
                    
                    <a onclick="deleteItem('@prod.Id')" class="btn btn-danger">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function deleteItem(id) {
            // Show confirmation dialog with SweetAlert
            console.log("enter");
            Swal.fire({
                title: 'Do you want to delete this product?',
                text: "This action cannot be undone.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Call the delete action via AJAX
                    $.ajax({
                        url: '@Url.Action("Delete", "Product")',
                        type: 'POST',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire(
                                    'Deletion successful!',
                                    response.message,
                                    'success'
                                ).then(() => {
                                    // Dynamically remove the deleted item from the DOM
                                    window.location.reload();
                                });
                            } else {
                                Swal.fire(
                                    'Error!',
                                    response.message,
                                    'error'
                                );
                            }
                        },
                        error: function (xhr) {
                            console.error(xhr.responseText); // Log detailed error
                            Swal.fire(
                                'Error!',
                                'An error occurred while deleting the user.',
                                'error'
                            );
                        }
                    });
                }
            });
        }
    </script>
}